<div>
  <div class="poke-form invisible">
    {{ pokemon_form }}
  </div>

  <div class="pokemon-grid">
    {% for pokemon in pokemons %}
      <div class="w-full h-full flex flex-col min-w-[360px] max-w-[960px]">
          <div class="flex flex-col gap-4 p-4">
            <div class="w-full h-64 rounded-md overflow-hidden border-2 border-gray-300 bg-red-300">
                <img
                  alt="Profile picture"
                  class="object-cover w-full"
                  src="{{pokemon.image_url}}"
                  style="width: 100%;height: 100%;"
                />
            </div>
            <div class="flex items-center gap-2">
              <button class="focus:outline-none like-button" pokemon-id="{{pokemon.id}}">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class=" h-6 w-6 text-gray-500 hover:text-gray-600 cursor-pointer"
                >
                  <path icon-type='unliked' {{pokemon.liked ? 'hidden' : ''}} d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"></path>
                  <path icon-type='liked' {{pokemon.liked ? '' : 'hidden'}} d="M2 9.1371C2 14 6.01943 16.5914 8.96173 18.9109C10 19.7294 11 20.5 12 20.5C13 20.5 14 19.7294 15.0383 18.9109C17.9806 16.5914 22 14 22 9.1371C22 4.27416 16.4998 0.825464 12 5.50063C7.50016 0.825464 2 4.27416 2 9.1371Z" fill="#1C274C"></path>
                </svg>
              </button>
              <button class="focus:outline-none">
                <img
                  width="24"
                  height="24"
                  src="https://cdn-icons-png.flaticon.com/512/861/861891.png"
                  alt="Fight Icon"/>
              </button>
              <span class="text-sm text-gray-500 ml-auto">
                {{pokemon.name}}
              </span>
            </div>
          </div>
      </div>
    {% endfor %}
  </div>
</div>
